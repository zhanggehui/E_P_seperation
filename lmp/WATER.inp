units real
boundary p p p
atom_style full
read_data /home/liufeng_pkuhpc/lustre3/zgh/GO_MD/md_scripts/lmp/singleTIP3P.data
include /home/liufeng_pkuhpc/lustre3/zgh/GO_MD/md_scripts/lmp/TIP3P.forcefield
replicate 30 30 30

velocity all create 300 1234
fix removeMomentum all momentum 1000 linear 1 1 1
fix constrain all shake 1.0e-4 20 10000 b 1 a 1
fix npt all npt temp 300 300 100.0 iso 1.0 1.0 1000.0
thermo 10000
run 1000
unfix npt

change_box all boundary p p s
write_dump all custom tmp.dump id zu 
variable laststep file tmp.dump
next laststep
read_dump tmp.dump ${laststep} z replace yes wrapped no
change_box all boundary p p s 
region zlo_plane plane 0 0 $(zlo-2) 0 0 1
fix wall_zlo all wall/region zlo_plane lj126 0.1521 3.1505742268315 10
fix nvt all nvt temp 300 300 100.0
dump check all atom 10000 water.dump
run 1000000
